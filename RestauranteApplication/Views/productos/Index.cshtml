@model IEnumerable<RestauranteApplication.Models.ProductoMulti>

@if (Request.IsAuthenticated)
{
    @Styles.Render("~/Content/Producto.css")
    <div class="container">
        <h2>Productos</h2>

        <p>
            @Html.ActionLink("Crear nuevo", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.productos.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.productos.cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.productos.precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.productos.ingreso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.productos.vencimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.proveedorFK.nombre)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.productos.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.productos.cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.productos.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.productos.ingreso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.productos.vencimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.proveedorFK.nombre)
                    </td>
                    <td>
                        @Html.ActionLink("Modificar", "Edit", new { id = item.productos.id_producto }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.productos.id_producto }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.productos.id_producto })
                    </td>
                </tr>
            }

        </table>
    </div>
}
else
{
    Response.Redirect("~/");
}