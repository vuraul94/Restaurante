@model RestauranteApplication.Models.recetas

@{
    ViewBag.Title = "Delete";
}

<h3>Eliminar receta <b>@Html.DisplayFor(model => model.nombre)</b></h3>
<br />
<h4>¿Estás seguro de que deseas eliminar esta receta?</h4>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <br />
        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver a la lista de recetas", "Index")
        </div>
    }
</div>
@if (!Request.IsAuthenticated)
{
    Response.Redirect("~/");
}