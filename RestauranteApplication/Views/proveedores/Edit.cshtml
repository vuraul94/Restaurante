@model RestauranteApplication.Models.ProveedorMulti

@{
    ViewBag.nombre = Model.proveedores.nombre;
    ViewBag.direccion = Model.proveedores.direccion;
    ViewBag.email = Model.proveedores.email;
    ViewBag.tel1 = Model.telefono1.telefono;
    ViewBag.tel2 = Model.telefono2.telefono;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">

        <div class="form-horizontal">
            <h4>proveedores</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.proveedores.id_proveedor)

            <div class="form-group">
                @Html.LabelFor(model => model.proveedores.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("nombre", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.proveedores.nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.proveedores.direccion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("direccion", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.proveedores.direccion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.proveedores.email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("email", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.proveedores.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Telefono1", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("tel1", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.telefono1.telefono, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Telefono2", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("tel2", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.telefono2.telefono, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>        

        <div>
            @Html.ActionLink("Regresar", "Index")
        </div>
        </div>
}
        @if (!Request.IsAuthenticated)
        {
            Response.Redirect("~/");
        }
